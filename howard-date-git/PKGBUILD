# Maintainer: Riccardo Berto <riccardobrt at gmail dot com>

_pkgname=date
pkgname=howard-date-git
pkgver=r613.dca8ddc
pkgrel=1
pkgdesc=""
arch=('x86_64')
url="https://github.com/HowardHinnant/$_pkgname"
license=('BSD-3')
depends=('cmake')
makedepends=('git')
source=("git+$url")
sha256sums=("SKIP")

pkgver() {
	cd "$_pkgname"
	printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
	cd $_pkgname
	mkdir build && cd build
	cmake .. && make $MAKEFLAGS
}

package() {
        cd $_pkgname
        install -D build/libtz.a $pkgdir/usr/lib/howard/libtz.a
        install -Dm644 LICENSE.txt $pkgdir/usr/share/licenses/$_pkgname/LICENSE
}
